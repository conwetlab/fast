{
    "name":"Compound Amazon Suggestion Screen",
    "creationDate":"2009-04-20T17:00:00+0100",
    "creator":"http://www.fabio.es/",
    "description":{
        "en-gb":"This screen shows the list of products related to a given one. It allows users select a new product from this list."
    },
    "domainContext":{
        "tags":[
            "compound",
            "amazon",
            "list",
            "suggestion"
        ],
        "user":"admin"
    },
    "homepage":"http://www.deri.ie/amazonSuggestion",
    "icon":"http://localhost:8010/images/catalogue/amazonSuggestion.png",
    "label":{
        "en-gb":"Suggestion List Compound"
    },
    "rights":"http://creativecommons.org/",
    "screenshot":"http://localhost:8010/images/screenshots/amazonSuggestion.png",
    "version":"1.0",
    "definition":{
        "buildingblocks":[
            {
                "id":"amazonSuggestionListForm1",
                "uri":"http://purl.oclc.org/fast/ontology/gadget#FormElement1259253812080"
            },
            {
                "id":"SuggestionListService1",
                "uri":"http://purl.oclc.org/fast/ontology/gadget#BackendService1259254414168"
            }
        ],
        "pipes":[
            {
                "from":{
                    "buildingblock":"SuggestionListService1",
                    "condition":"list"
                },
                "to":{
                    "buildingblock":"amazonSuggestionListForm1",
                    "condition":"list",
                    "action":"showTable"
                }
            },
            {
                "from":{
                    "buildingblock":"SuggestionListService1",
                    "condition":"message"
                },
                "to":{
                    "buildingblock":"amazonSuggestionListForm1",
                    "condition":"message",
                    "action":"showMessage"
                }
            },
            {
                "from":{
                    "buildingblock":"amazonListForm1",
                    "condition":"filter"
                },
                "to":{
                    "buildingblock":"SuggestionListService1",
                    "condition":"filter",
                    "action":"search"
                }
            },
            {
                "from":{
                    "buildingblock":"amazonSuggestionListForm1",
                    "condition":"item"
                },
                "to":{
                    "buildingblock":"",
                    "action":"",
                    "condition":"item"
                }
            }
        ],
        "triggers":[
            {
                "from":{
                    "buildingblock":"",
                    "name":"_onload"
                },
                "to":{
                    "buildingblock":"amazonSuggestionListForm1",
                    "action":"init"
                }
            },
            {
                "from":{
                    "buildingblock":"",
                    "name":"_onload"
                },
                "to":{
                    "buildingblock":"SuggestionListService1",
                    "action":"fetch"
                }
            }
        ]
    },
    "preconditions":[
        [
            {
                "label":{
                    "en-gb":"An item"
                },
                "pattern":"?Item http://www.w3.org/1999/02/22-rdf-syntax-ns#type http://aws.amazon.com/AWSECommerceService#Item",
                "positive":"true"
            }
        ]
    ],
    "postconditions":[
        [
            {
                "id":"item",
                "label":{
                    "en-gb":"An item"
                },
                "pattern":"?Item http://www.w3.org/1999/02/22-rdf-syntax-ns#type http://aws.amazon.com/AWSECommerceService#Item",
                "positive":"true"
            }
        ]
    ]
}